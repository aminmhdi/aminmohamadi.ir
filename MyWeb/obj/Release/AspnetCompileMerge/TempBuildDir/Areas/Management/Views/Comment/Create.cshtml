@model MyWeb.ViewModel.Comment.CommentInsertViewModel
@{
    ViewBag.Title = Resources.PersianResources.CreateNewComment;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel">
        <header class="panel-heading">
            <i class="fa fa-file append-icon" aria-hidden="true"></i>
            @Resources.PersianResources.CreateNewComment
            <a href="@Url.Action("Index")" class="btn btn-default btn-sm pull-left">
                <i class="fa fa-long-arrow-left append-icon" aria-hidden="true"></i>
                @Resources.PersianResources.BackToList
            </a>

        </header>
        <div class="panel-body">
            <div class="row">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-xs-12 col-md-3 col-lg-3">
                    @Html.LabelFor(model => model.Body, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Body, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-12 col-md-12 col-lg-12">
                    @Html.LabelFor(model => model.Ip, new { @class = "control-label " })
                    @Html.TextBoxFor(model => model.Ip, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Ip, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-12 col-md-12 col-lg-12">
                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-plus append-icon" aria-hidden="true"></i>
                            @Resources.PersianResources.Create
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

