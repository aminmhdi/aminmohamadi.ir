@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
<a title="@User.Identity.GetUserName()" href="javascript:void(0)" data-toggle="dropdown" class="dropdown-toggle" aria-haspopup="true">
    <i class="middle-inline">
        <img src="/File?folder=Avatar&file=@(User.Identity.GetUserId()).jpg" alt="" class="profileImage" />
    </i>
    @User.Identity.GetUserName()
    <span class="caret"></span>
</a>
<ul role="menu" class="dropdown-menu">
    <li>
        <a href="@Url.Action("Edit", "Account")"><i class="fa fa-user append-icon"></i>
            @Resources.PersianResources.ProfileEdit
        </a>
    </li>
    @*<li>
        <a href="@Url.Action("Edit", "Setting")"><i class="fa fa-cog append-icon"></i>
            @Resources.PersianResources.Setting
        </a>
    </li>*@
    <li>
        <a id="logout" href="javascript:void(0)">
            <i class="fa fa-sign-out append-icon" aria-hidden="true"></i>
            @Resources.PersianResources.Logout
        </a>
    </li>
</ul>
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "pull-left" }))
    {
    @Html.AntiForgeryToken()
    }
}
else
{
@*<ul class="nav pull-left top-menu">*@
    <a href="javascript:void(0)" id="login">@Resources.PersianResources.Login</a>
    @*@Html.ActionLink(Resources.PersianResources.Login, "Login", "Account", null, null)*@
    @*<li>@Html.ActionLink(Resources.PersianResources.Register, "Register", "Account", null, null)</li>*@
@*</ul>*@
}
