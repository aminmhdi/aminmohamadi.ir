@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AminMohamadi.ir | @ViewBag.Title</title>
    <meta name="description" content="اینجا وبسایت شخصی من هست که برای معرفی خودم و قرار دادن مطالبی که تجربه کردم و احساس کردم قابل اشتراک گذاشتن هست، ساخته شده است">
    <meta name="geo.region" content="IR-Tehran">
    @*<link rel="alternate" type="application/rss+xml" title="ShapedBlog » Feed" href="http://demo.shapedtheme.com/shaped-blog/feed/">
        <link rel="alternate" type="application/rss+xml" title="ShapedBlog » Comments Feed" href="http://demo.shapedtheme.com/shaped-blog/comments/feed/">*@
    <link href="/Content/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/Css/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="/Content/Css/bootstrap-reset.min.css" rel="stylesheet" />
    <link href="/Content/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/Content/Main/Theme.min.css" type="text/css" media="all">
    <link rel="stylesheet" href="/Content/Main/Responsive.min.css" type="text/css" media="all">
    <script type="text/javascript" src="/Scripts/jquery-1.10.2.min.js"></script>
    <link rel="icon" href="/fav.ico" sizes="32x32">
    <link rel="icon" href="/fav.ico" sizes="192x192">
    <link rel="apple-touch-icon-precomposed" href="/fav.ico">
    <meta name="msapplication-TileImage" content="/fav.ico">
</head>
<body>
    <header id="header">
        <div id="trueHeader">
            <div class="wrapper navbar-me">
                <div class="container">
                    <div class="menu_main">
                        <div class="navbar blogx-navbar navbar-default ">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#st-navber-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>

                                <div class="logo">
                                    <a href="/">
                                        <img src="/Content/Images/logo.png" alt="">
                                    </a>
                                </div>
                            </div>

                            <div id="st-navber-collapse" class="navbar-collapse collapse pull-left">
                                <ul id="menu-primary-menu" class="nav navbar-nav">
                                    <li id="menu-item-1" class="active">
                                        <a title="@Resources.PersianResources.Home" href="/">
                                            @Resources.PersianResources.Home
                                        </a>
                                    </li>
                                    <li id="menu-item-2" class="dropdown">
                                        <a title="@Resources.PersianResources.Categories" href="javascript:void(0)" data-toggle="dropdown" class="dropdown-toggle" aria-haspopup="true">
                                            @Resources.PersianResources.Categories
                                            <span class="caret"></span>
                                        </a>
                                        <ul role="menu" class="dropdown-menu">
                                            @{
                                                Html.RenderAction("CategoryMenu", "Category", new { area = "" });
                                            }
                                        </ul>
                                    </li>
                                    @*<li id="menu-item-3" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-3">
                                            <a title="@Resources.PersianResources.About" href="/About">
                                                @Resources.PersianResources.About
                                            </a>
                                        </li>*@
                                    <li id="menu-item-4">
                                        <a title="@Resources.PersianResources.Contact" href="/Contact">
                                            @Resources.PersianResources.Contact
                                        </a>
                                    </li>
                                    <li id="menu-item-5" class="dropdown">
                                        @{
                                            Html.RenderPartial("_LoginPartial");
                                        }
                                    </li>
                                    <li id="menu-item-6">

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <main role="main">
                        @RenderBody()
                    </main>
                </div>
                <div class="col-md-4">
                    <div role="complementary">
                        <div class="widget widget_about text-center">
                            <img src="/Content/images/me.jpg" alt="" class="img-circle">
                            <h2 class="text-uppercase">امین محمدی</h2>
                            <p class="text-right text-justify">
                                فارغ&zwnj;التحصیل رشته مهندسی کامپیوتر گرایش نرم&zwnj;افزار هستم. به طراحی سایت و سیستم&zwnj;های اطلاعاتی علاقه بسیاری داشته و در این زمینه فعالیت&zwnj;های بسیاری دارم. اینجا وبسایت شخصی من هست که برای معرفی خودم و قرار دادن مطالبی که تجربه کردم و احساس کردم قابل اشتراک گذاشتن هست، ساخته شده است.
                            </p>
                            <div class="social-share">
                                <ul class="list-inline">
                                    <li><a href="https://facebook.com/vmp351" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="https://twitter.com/vmp351" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="https://plus.google.com/u/0/+AminMohammadi1" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                                    <li><a href="https://www.linkedin.com/in/aminmohamadi" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                                    <li><a href="https://www.instagram.com/amin_mohamadi_/" target="_blank"><i class="fa fa-instagram"></i></a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="widget">
                            <div class="input-group">
                                <input type="text" class="form-control searchbox" id="searchtext" placeholder="@Resources.PersianResources.Search...">
                                <span class="input-group-btn">
                                    <input class="btn btn-success searchbox" id="btn-search" type="button" value="@Resources.PersianResources.Search">
                                </span>
                            </div>
                        </div>

                        @{
                            @Html.Action("Index", "Recent")
                        }

                        @{
                            @Html.Action("Index", "Comment")
                        }

                        <div class="widget widget-category">
                            <h2 class="widget-title">@Resources.PersianResources.Categories</h2>
                            <ul>
                                @{
                                    Html.RenderAction("CategoryMenu", "Category", new { area = "" });
                                }
                            </ul>
                        </div>
                        @{
                            Html.RenderAction("Index", "Keyword");
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr>
            </div>
        </div>
    </div>
    <footer class="site-footer" role="contentinfo">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <p>
                        © 2014-@DateTime.Now.Year AminMohamadi.ir All Rights Reserved
                    </p>
                    <p>
                        استفاده از مطالب وبسایت و انتشار آنها با ذکر منبع بلامانع میباشد.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <div class="scroll-up">
        <a href="#"><i class="fa fa-angle-up"></i></a>
    </div>

    @if (!Request.IsAuthenticated)
    {
        <div class="modal fade" id="loginModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="wrapper-page">
                    <div class="modal-body" id="loginContent">

                    </div>
                </div>
            </div>
        </div>
    }

    <script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="/Scripts/scripts.min.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments);
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g;
            m.parentNode.insertBefore(a, m);
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-90996262-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>