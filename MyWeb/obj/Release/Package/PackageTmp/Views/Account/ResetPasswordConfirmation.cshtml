@{
  Layout = "~/Views/Shared/_LayoutAccount.cshtml";
  ViewBag.Title = Resources.PersianResources.ResetPassword;
}
<div class="panel small-panel">
    <header class="panel-heading">
        <i class="fa fa-user append-icon"></i>
        @Resources.PersianResources.ResetPassword
    </header>
    <div class="panel-body">
        <p>
            کاربر گرامی کلمه عبور شما به موفقیت تغییر کرد.
        </p>
        <p>
            هم اکنون به صورت اتوماتیک وارد حساب خود شده اید.
        </p>

        @if (!User.Identity.IsAuthenticated)
        {
        <div class="row">
            <div class="col-md-12 text-center">
                <a href="/" class="btn btn-success btn-sm">
                    @Resources.PersianResources.Home
                </a>
            </div>
        </div>
        }
    </div>
</div>