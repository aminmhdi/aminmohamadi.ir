@model MyWeb.ViewModel.Account.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewBag.Title = Resources.PersianResources.ForgotPassword;
}
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form", id = "forgotPasswordForm" }))
{
    @Html.AntiForgeryToken()
    <div class="panel small-panel">
        <header class="panel-heading">
            <i class="fa fa-user append-icon"></i>
            @Resources.PersianResources.ForgotPassword
        </header>
        <div class="panel-body">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group col-md-12">
                <label>
                    @Resources.PersianResources.ForForgotPasswordEnterEmail
                </label>
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { autocomplete = "off", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-success" onclick="AjaxForm.CustomSubmit(this, 'forgotPasswordForm')" data-loading-text="@Resources.PersianResources.PleaseWait">
                    @Resources.PersianResources.SendEmail
                </button>
            </div>
        </div>
    </div>
}
@section Scripts {
}
